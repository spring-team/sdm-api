{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "umd",
    "target": "es2016",
    "lib": [
      "es6",
      "esnext",
      "es2015"
    ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist/",
    "rootDir": "./src/"
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
